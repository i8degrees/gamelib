<rml>
  <head>
    <title>CARDS.</title>
    <link type="text/template" href="window.rml" />
    <style>

      body
      {
        /* TTcards at x2 resolution*/
        width: 328px;
        height: 392px;
      }

      body.window
      {
        /*min-width: 168px;*/
        /*min-height: 200px;*/
        max-width: 400px;
        max-height: 400px;
      }

      div#window
      {
        width: auto;
        padding: 0;
        padding-left: 5px;
      }

      div#title_bar
      {
        display:none;
      }

      div#content
      {
        /*padding-top: 2%;*/
        padding-bottom: 2%;
        /*overflow: hidden;*/
      }

      datagridbody
      {
        text-align: left;

        /*padding: 0px 4px 4px 4px;*/
        padding-top: 0px;
        padding-right: 4px;
        padding-bottom: 4px;
        padding-left: 25px;
      }

      datagridheader
      {
        font-family: Delicious;
        color: white;
        font-size: 12px;
        font-weight: bold;
        outline-font-effect: outline;
        outline-width: 1px;
        outline-color: black;

        /*padding: 5px 10px 0px 10px;*/
        padding-top: 5px;
        padding-right: 0px;
        padding-bottom: 0px;
        padding-left: 0px;

        margin-top: -8px;
      }

    </style>
  </head>
  <body template="window">
    <datagrid source="cards_db.cards">
      <!-- <col fields="id" width="10%">.</col> -->
      <col fields="name" formatter="card" width="75%">CARDS P. 1</col>
      <col fields="num" width="10%">NUM.</col>
    </datagrid>
  </body>
</rml>
