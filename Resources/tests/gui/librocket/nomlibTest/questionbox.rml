<rml>
  <head>
    <title>CHOICE</title>
    <link type="text/template" href="window.rml" />
    <style>

      body
      {
        /* Required for alignment; */
        width: 116px;
        /* The actual height is ultimately determined by the font size */
        height: 91px;

        /* Horizontal center */
        margin-right: auto;
        margin-left: auto;

        /* Vertical center */
        margin-top: auto;
        margin-bottom: auto;
      }

      div#content
      {
        display: block;
        text-align: center;

        padding-top: 4%;
        padding-bottom: 4%;
      }

      button
      {
        display: block;
        tab-index: auto;
      }

      button:focus, button:active
      {
        color: red;
      }

    </style>
  </head>
  <body template="window">
    <p id='question'>Are you sure?</p>

    <!-- Answer tag provides easy access to acquiring text origins -->
    <form id='response'>
      <button>
        <answer id='yes'>Yes</answer>
      </button>
      <button>
        <answer id='no'>No</answer>
      </button>
    </form>

  </body>
</rml>
