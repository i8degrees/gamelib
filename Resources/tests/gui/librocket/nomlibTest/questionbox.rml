<rml>
  <head>
    <title>CHOICE</title>
    <link type="text/template" href="window.rml" />
    <style>

      body
      {
        width: 124px;
        height: 72px;

        margin: auto;
      }

      body.window
      {
        min-width: 124px;
        min-height: 72px;
      }

      div#content
      {
        text-align: center;

        padding-top: 2%;
        padding-bottom: 2%;

        /*padding-left: 2%;*/
        /*padding-right: 2%;*/
      }

      /* TODO: use list markup elements here */
      .choice
      {
        display: block;
        color: white;
      }

      .choice.selected
      {
        color: red;
      }

    </style>
  </head>
  <body template="window">

    <div id='question'>
      <p id='message'>Are you sure?</p>
      <span id='choice1' class='choice'>Yes</span>
      <span id='choice2' class='choice'>No</span>
    </div>

  </body>
</rml>
